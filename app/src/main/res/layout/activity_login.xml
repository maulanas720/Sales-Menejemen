<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ssca"
    >

    <TextView
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:text="SAMEN"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="SALES MANAGEMENT"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#90737373"
        android:textSize="16sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/email"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#9CFFFFFF"
        android:hint="@string/email"
        android:paddingLeft="10sp"

        android:textColor="@color/hitam"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="230dp"

        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#9CFFFFFF"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/hitam"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/barunih"
        android:fontFamily="@font/leter"
        android:textStyle="bold"
        android:textColor="@color/putih"
        android:textSize="16sp"
        android:text="@string/login"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/io"
        android:fontFamily="@font/leter"
        android:gravity="center"
        android:text="@string/create"
        android:textColor="@color/putih"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>